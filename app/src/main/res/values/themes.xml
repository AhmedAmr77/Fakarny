<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripReminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pro</item>
        <item name="colorPrimaryVariant">@color/pro</item>
        <item name="colorOnPrimary">#EFEFEF</item>
        <!-- Secondary brand color. -->
        <item name="fontFamily">@font/merinda_carter_regular</item>
        <item name="colorSecondary">@android:color/holo_blue_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TripReminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/merinda_carter_regular</item>
    </style>

    <style name="Theme.TripReminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:actionMenuTextAppearance">@font/merinda_carter_regular</item>
        <item name="fontFamily">@font/merinda_carter_regular</item>

    </style>

    <style name="Theme.TripReminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="fontFamily">@font/merinda_carter_regular</item>
        <item name="android:actionMenuTextAppearance">@font/merinda_carter_regular</item>

    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="fontFamily">@font/merinda_carter_regular</item>
        <item name="android:actionMenuTextAppearance">@font/merinda_carter_regular</item>

    </style>
</resources>