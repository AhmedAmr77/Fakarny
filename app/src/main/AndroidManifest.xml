<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.FakarnyAppForTripReminder.Fakarny">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="permission:android.permission.START_ACTIVITIES_FROM_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trip_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trip_icon_round"
        android:name="com.FakarnyAppForTripReminder.Fakarny.ApplicationR"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripReminder">

        <receiver
            android:name="com.FakarnyAppForTripReminder.Fakarny.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity
            android:name="com.FakarnyAppForTripReminder.Fakarny.ShowNotes"
            android:label="@string/notes"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBr20rtMn4dMk3l0ydTGtku8AU_zCh6rRQ" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:excludeFromRecents="true"
            android:name="com.FakarnyAppForTripReminder.Fakarny.AlarmDialog"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>

        <activity
            android:name="com.FakarnyAppForTripReminder.Fakarny.HistoryMaps"
            android:label="@string/title_activity_history_maps" />

        <activity android:name="com.FakarnyAppForTripReminder.Fakarny.AddNote"
                  android:label="@string/add_note"/>

        <activity android:name="com.FakarnyAppForTripReminder.Fakarny.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.FakarnyAppForTripReminder.Fakarny.NewTripActivity"
            android:label="@string/new_trip"/>

        <activity
            android:name="com.FakarnyAppForTripReminder.Fakarny.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TripReminder.NoActionBar" />

        <service
            android:name="com.FakarnyAppForTripReminder.Fakarny.FloatingViewService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>